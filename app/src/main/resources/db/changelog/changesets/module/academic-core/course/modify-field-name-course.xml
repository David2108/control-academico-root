<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="modify-field-name-course" author="david">
        <modifyDataType tableName="courses" columnName="name" newDataType="VARCHAR(100)"/>
        <addNotNullConstraint tableName="courses" columnName="name" columnDataType="VARCHAR(100)" constraintName="uk_courses_name"/>
        <addColumn tableName="courses">
            <column name="code" type="varchar(25)">
                <constraints unique="true" nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>